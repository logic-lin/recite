Page{
  width: 100%;
}
.header{
  
  display: flex;
  align-items: center;
  padding: 10rpx 0 10rpx 40rpx;
  width: 100%;
 
}
slider{
  display: inline-block;
  width:60%;
}
.important{
  display: inline-block;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  color: white;
  text-align: center;
  width:150rpx;
  
}
.header>view{
  background-color:#33cccc;
  color: white;
  display: inline-block;
  width:200rpx;
  height: 2em;
  line-height: 2em;
  text-align: center;
  margin: 20rpx;
  border-radius: 10rpx;
}
.header input{
  display: inline-block;
  width: 100rpx;
  border: 1rpx solid gray;
}
.container{
  width: 100%;
}
.list{
  white-space:nowrap;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.list>view{
  display: inline-block;
}
.translate,.but{
  height: 350rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  text-align: center;
  position: fixed;
  padding: 20rpx 0;
}
.translate input{
  margin: 0;
  padding: 0;
  border: 1rpx solid gray;
  width:40%;
  display:inline-block;
}
.translation{
  height: 220rpx;
  width: 100%;
  overflow: hidden;
  text-align: left;
  margin-bottom: 20rpx;
}
.translation view{
  padding: 5rpx 30rpx;
}
.get,.but view{
  color: white;
  display: inline-block;
  width: 40%;
  height: 2em;
  line-height: 2em;
  text-align: center;
  margin: 20rpx;
  border-radius: 10rpx;
}
